{
	"manifest_version": 3,
	"name": "Turbowarp addon",
	"description": "Turbowarp用の追加アドオン",
	"version": "1.1.1",
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"48": "images/icon-48.png",
		"64": "images/icon-64.png",
		"128": "images/icon-128.png"
	},
	"permissions": [
		"activeTab",
		"scripting"
	],
	"host_permissions": [
		"*://*.turbowarp.org/*"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*.turbowarp.org/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png",
			"64": "images/icon-64.png",
			"128": "images/icon-128.png"
		}
	}
}
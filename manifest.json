{
	"manifest_version": 3,
	"name": "Turbowarp addon",
	"description": "Turbowarp用の追加アドオン",
	"version": "1.2.0",
	"icons": {
		"16": "images/icon-16.png",
		"32": "images/icon-32.png",
		"128": "images/icon.png"
	},
	"permissions": [
		"activeTab",
		"scripting",
		"storage"
	],
	"host_permissions": [
		"*://*.turbowarp.org/*"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*.turbowarp.org/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"action": {
		"default_popup": "popup/popup.html"
	}
}